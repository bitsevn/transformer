{
  "name": "Company Projects Configuration",
  "version": "1.0",
  "description": "Configuration for company projects XML to JSON transformation with attribute extraction",
  "propertyMappings": [
    {
      "xmlPath": "company/name",
      "jsonPath": "companyName",
      "dataType": "string",
      "required": true
    },
    {
      "xmlPath": "company/industry",
      "jsonPath": "businessType",
      "dataType": "string",
      "required": false
    }
  ],
  "nestedPropertyMappings": [
    {
      "xmlPath": "company/projects/project",
      "jsonPath": "projectPortfolio",
      "properties": [
        {
          "xmlField": "projectId",
          "jsonField": "projectCode",
          "dataType": "string",
          "required": true
        },
        {
          "xmlField": "name",
          "jsonField": "projectName",
          "dataType": "string",
          "required": true,
          "transform": "trim"
        },
        {
          "xmlField": "description",
          "jsonField": "projectDescription",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "startDate",
          "jsonField": "startDate",
          "dataType": "date",
          "required": false
        },
        {
          "xmlField": "deadline",
          "jsonField": "endDate",
          "dataType": "date",
          "required": false
        },
        {
          "xmlField": "budget",
          "jsonField": "projectBudget",
          "dataType": "integer",
          "required": false
        }
      ]
    }
  ],
  "arrayMappings": {
    "company/projects/project|projectId:projectCode,status:projectStatus,priority:priorityLevel": "projectSummary",
    "company/projects/project/team/member": "allTeamMembers",
    "company/projects/project/technologies/tech": "allTechnologies"
  },
  "typeConversions": {
    "string": "string",
    "integer": "number",
    "double": "number",
    "date": "string"
  },
  "defaultValues": {
    "businessType": "Consulting",
    "priorityLevel": "MEDIUM"
  },
  "transformations": {
    "uppercase": "uppercase",
    "lowercase": "lowercase",
    "trim": "trim"
  }
}
