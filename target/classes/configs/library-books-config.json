{
  "name": "Library Books Configuration",
  "version": "1.0",
  "description": "Configuration for library books XML to JSON transformation with complex metadata handling",
  "propertyMappings": [
    {
      "xmlPath": "library/@name",
      "jsonPath": "libraryName",
      "dataType": "string",
      "required": true
    },
    {
      "xmlPath": "library/@location",
      "jsonPath": "libraryLocation",
      "dataType": "string",
      "required": false
    },
    {
      "xmlPath": "library/@established",
      "jsonPath": "establishedYear",
      "dataType": "integer",
      "required": false
    }
  ],
  "nestedPropertyMappings": [
    {
      "xmlPath": "library/catalog/book",
      "jsonPath": "bookCatalog",
      "properties": [
        {
          "xmlField": "@isbn",
          "jsonField": "isbn",
          "dataType": "string",
          "required": true
        },
        {
          "xmlField": "@genre",
          "jsonField": "bookGenre",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "@available",
          "jsonField": "isAvailable",
          "dataType": "boolean",
          "required": false
        },
        {
          "xmlField": "title",
          "jsonField": "bookTitle",
          "dataType": "string",
          "required": true,
          "transform": "trim"
        },
        {
          "xmlField": "author/firstName",
          "jsonField": "authorFirstName",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "author/lastName",
          "jsonField": "authorLastName",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "author/nationality",
          "jsonField": "authorNationality",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "author/birthYear",
          "jsonField": "authorBirthYear",
          "dataType": "integer",
          "required": false
        },
        {
          "xmlField": "publication/publisher",
          "jsonField": "publisherName",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "publication/publicationDate",
          "jsonField": "publicationDate",
          "dataType": "date",
          "required": false
        },
        {
          "xmlField": "publication/edition",
          "jsonField": "editionNumber",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "publication/pages",
          "jsonField": "pageCount",
          "dataType": "integer",
          "required": false
        },
        {
          "xmlField": "classification/deweyDecimal",
          "jsonField": "deweyDecimal",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "availability/totalCopies",
          "jsonField": "totalCopies",
          "dataType": "integer",
          "required": false
        },
        {
          "xmlField": "availability/availableCopies",
          "jsonField": "availableCopies",
          "dataType": "integer",
          "required": false
        },
        {
          "xmlField": "availability/reservedCopies",
          "jsonField": "reservedCopies",
          "dataType": "integer",
          "required": false
        }
      ]
    }
  ],
  "arrayMappings": {
    "library/catalog/book/classification/subject": "allSubjects",
    "library/catalog/book/reviews/review": "allReviews",
    "library/statistics/genres/genre": "genreStatistics",
    "library/statistics/circulation/month": "circulationData"
  },
  "typeConversions": {
    "string": "string",
    "integer": "number",
    "double": "number",
    "boolean": "boolean",
    "date": "string"
  },
  "defaultValues": {
    "libraryLocation": "Downtown",
    "establishedYear": 1980,
    "isAvailable": true
  },
  "transformations": {
    "uppercase": "uppercase",
    "lowercase": "lowercase",
    "trim": "trim"
  }
}
