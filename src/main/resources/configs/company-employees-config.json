{
  "name": "Company Employees Configuration",
  "version": "1.0",
  "description": "Configuration for company employees XML to JSON transformation with array mapping",
  "propertyMappings": [
    {
      "xmlPath": "company/name",
      "jsonPath": "companyName",
      "dataType": "string",
      "required": true
    },
    {
      "xmlPath": "company/industry",
      "jsonPath": "businessType",
      "dataType": "string",
      "required": false
    },
    {
      "xmlPath": "company/founded",
      "jsonPath": "foundedYear",
      "dataType": "integer",
      "required": false
    }
  ],
  "arrayMappings": {
    "company/employees/employee": "allEmployees",
    "company/employees/employee|id:employeeId,name:fullName,position:jobTitle,salary:annualSalary": "mappedEmployees",
    "company/employees/employee/skills/skill": "allSkills"
  },
  "nestedPropertyMappings": [
    {
      "xmlPath": "company/employees/employee",
      "jsonPath": "detailedEmployees",
      "properties": [
        {
          "xmlField": "id",
          "jsonField": "employeeId",
          "dataType": "string",
          "required": true
        },
        {
          "xmlField": "name",
          "jsonField": "fullName",
          "dataType": "string",
          "required": true,
          "transform": "trim"
        },
        {
          "xmlField": "position",
          "jsonField": "jobTitle",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "salary",
          "jsonField": "annualSalary",
          "dataType": "integer",
          "required": false
        },
        {
          "xmlField": "department/deptId",
          "jsonField": "deptCode",
          "dataType": "string",
          "required": false
        },
        {
          "xmlField": "department/deptName",
          "jsonField": "departmentName",
          "dataType": "string",
          "required": false
        }
      ]
    }
  ],
  "typeConversions": {
    "string": "string",
    "integer": "number",
    "double": "number",
    "boolean": "boolean"
  },
  "defaultValues": {
    "businessType": "Technology",
    "foundedYear": 2000
  },
  "transformations": {
    "uppercase": "uppercase",
    "lowercase": "lowercase",
    "trim": "trim"
  }
}
